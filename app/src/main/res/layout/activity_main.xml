<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_background_04"
    tools:context=".MainActivity">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="75dp"
      android:layout_marginBottom="45dp"
      android:layout_alignParentBottom="true"
      android:src="@drawable/img_background_02"/>

  <!-- Bottom Navigation Menu -->
  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:id="@+id/bottomnavigation_menu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:elevation="10dp"
      android:background="@color/colorSecondary"
      app:itemIconTint="@color/navigation_state"
      app:labelVisibilityMode="unlabeled"
      app:menu="@menu/menu_bottom_navigation"/>

  <FrameLayout
      android:id="@+id/fragmentLayout_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/bottomnavigation_menu"/>

</RelativeLayout>

