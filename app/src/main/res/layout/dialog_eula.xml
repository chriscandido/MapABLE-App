<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/textView_eulaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:text="Terms of Use"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="@font/renogare_regular"
        style="@style/headerText"/>

    <ScrollView
        android:id="@+id/agreement_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout_eulaAgreement"
        android:layout_below="@+id/textView_eulaTitle"
        android:layout_marginBottom="5dp"
        android:paddingBottom="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="@color/colorNeutral"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/heading"
                android:textSize="10sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title01"
                android:textSize="15sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body01"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title02"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body02"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title03"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body03"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title04"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body04"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title05"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body05"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title06"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body06"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title07"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body07"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title08"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body08"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title09"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title10"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body10"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title11"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body11"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title12"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body12"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title13"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/body13"
                android:textSize="12sp"
                android:fontFamily="@font/renogare_regular"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout_eulaAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!-- Agree CheckBox -->
        <CheckBox
            android:id="@+id/checkBox_eulaAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:text="I AGREE WITH THE TERMS AND CONDITION"
            android:textSize="7sp"
            android:fontFamily="@font/renogare_regular"/>

        <!-- Agree Button -->
        <Button
            android:id="@+id/button_eulaAgree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bg_box01"
            android:text="Agree and Continue"
            android:textColor="@color/colorBackground"
            android:textSize="12sp"
            android:fontFamily="@font/"
            android:visibility="invisible"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>