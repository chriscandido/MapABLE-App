<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ClickListener"
            type="up.envisage.mapable.databinding.Listener"/>
    </data>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_background_05"
        android:orientation="vertical"
        tools:context=".ui.registration.RegisterActivity">

        <!-- MASDAN Logo -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo_masdan_02"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Mag-Signup"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/renogare_regular"/>

        <!-- Person Info -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_registerName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/colorAccent02"
            app:boxStrokeColor="@color/colorBackground"
            app:hintTextColor="@color/colorAccent02"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="Pangalan"
                android:textSize="15sp"
                android:textColor="@color/colorAccent02"
                android:fontFamily="@font/renogare_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_registerMobileNum"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/colorAccent02"
            app:boxStrokeColor="@color/colorBackground"
            app:hintTextColor="@color/colorAccent02"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="Mobile Number"
                android:textSize="15sp"
                android:textColor="@color/colorAccent02"
                android:fontFamily="@font/renogare_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_registerEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/colorAccent02"
            app:boxStrokeColor="@color/colorBackground"
            app:hintTextColor="@color/colorAccent02"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="Email"
                android:textSize="15sp"
                android:textColor="@color/colorAccent02"
                android:fontFamily="@font/renogare_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_registerUsername"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/colorAccent02"
            app:boxStrokeColor="@color/colorBackground"
            app:hintTextColor="@color/colorAccent02"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="Username"
                android:textSize="15sp"
                android:textColor="@color/colorAccent02"
                android:fontFamily="@font/renogare_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_registerPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/colorAccent02"
            app:boxStrokeColor="@color/colorBackground"
            app:hintTextColor="@color/colorAccent02"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:hint="Password"
                android:textSize="15sp"
                android:textColor="@color/colorAccent02"
                android:fontFamily="@font/renogare_regular"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Signup Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_submit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorText"
            android:text="SIGN-UP"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/renogare_regular"
            android:onClick="@{(v) -> ClickListener.onClick(v)}"
            app:cornerRadius="20dp"
            style="@style/Widget.MaterialComponents.Button"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView_registerText01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meron ng Account? "
                android:textSize="15sp"
                android:textColor="@color/colorAccent02"
                android:fontFamily="@font/renogare_regular"/>

            <TextView
                android:id="@+id/textView_registerLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/textView_registerText01"
                android:text="MAG-LOGIN"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/renogare_regular"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{(v) -> ClickListener.onClick(v)}"/>

        </RelativeLayout>

    </LinearLayout>

</layout>