<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".ui.home.CameraActivity">

    <!-- Top Navigation Menu -->
    <RelativeLayout
        android:id="@+id/camera_mainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary">

        <!-- Back button -->
        <TextView
            android:id="@+id/textView_camera_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:text="Back"
            android:clickable="true"
            style="@style/navigationText"/>

    </RelativeLayout>

    <!-- Camera Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_report_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/camera_mainTitle"
        android:backgroundTint="@color/colorAccent"
        android:text="Camera"
        android:textSize="15sp"
        android:textColor="@color/colorSecondary"
        android:fontFamily="@font/montserrat"
        app:icon="@drawable/ic_report_camera"
        app:iconGravity="textStart"
        app:iconTint="@color/colorSecondary"
        app:iconSize="25dp"
        app:cornerRadius="20dp"
        style="@style/Widget.MaterialComponents.Button"/>

    <!-- Gallery Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_report_photoGallery"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_report_camera"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/montserrat"
        android:text="Photo Gallery"
        android:textColor="@color/colorSecondary"
        android:textSize="15sp"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_report_photogallery"
        app:iconGravity="textStart"
        app:iconSize="25dp"
        app:iconTint="@color/colorSecondary" />

    <!-- Photo -->
    <ImageView
        android:id="@+id/imageView_reportCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="75dp"
        android:layout_below="@+id/button_report_photoGallery" />

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_report_savePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorText"
        android:text="SAVE"
        android:textSize="15sp"
        android:textColor="@color/colorSecondary"
        android:fontFamily="@font/montserrat_extrabold"
        app:cornerRadius="20dp"
        style="@style/Widget.MaterialComponents.Button"/>

</RelativeLayout>