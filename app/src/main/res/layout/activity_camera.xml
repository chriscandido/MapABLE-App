<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".ui.home.CameraActivity">

    <!-- Main Header -->
    <RelativeLayout
        android:id="@+id/relativeLayout_mainHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageView_mainHeader_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_box04"
            android:transitionName="imageView_mainHeader_transition" />

        <!-- Back button -->
        <ImageView
            android:id="@+id/imageView_camera_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/amplesoftpro_medium"
            android:gravity="center"
            android:text="May Report Ako!"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Camera Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_report_camera"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout_mainHeader"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorText"
        android:fontFamily="@font/montserrat"
        android:text="Camera"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_report_camera"
        app:iconGravity="textStart"
        app:iconSize="25dp"
        app:iconTint="@color/colorBlack" />

    <!-- Gallery Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_report_photoGallery"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_report_camera"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorText"
        android:fontFamily="@font/montserrat"
        android:text="Photo Gallery"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_report_photogallery"
        app:iconGravity="textStart"
        app:iconSize="25dp"
        app:iconTint="@color/colorBlack" />

    <!-- Photo -->
    <ImageView
        android:id="@+id/imageView_reportCamera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="75dp"
        android:layout_below="@+id/button_report_photoGallery" />

    <!-- Save Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_report_savePhoto"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:backgroundTint="@color/colorText"
        android:fontFamily="@font/montserrat_extrabold"
        android:gravity="center"
        android:text="SEND REPORT"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        app:cornerRadius="10dp" />

</RelativeLayout>