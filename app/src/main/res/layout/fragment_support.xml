<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".fragment.SupportFragment">

    <!-- Top Navigation Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="MORE"
            android:gravity="center"
            style="@style/navigationText"/>

    </LinearLayout>

    <!-- Language -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_box01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_support_world"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="English"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/renogare_regular"/>
        </LinearLayout>
    </LinearLayout>

    <!-- About Application -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_box01">

        <TextView
            android:id="@+id/textView_support_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="About"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/renogare_regular"/>

    </LinearLayout>

    <!-- Privacy Policy -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_box01">

        <TextView
            android:id="@+id/textView_support_policy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Privay Policy"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/renogare_regular"/>

    </LinearLayout>

    <!-- Feddback -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_box01">

        <TextView
            android:id="@+id/textView_support_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Feedback"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/renogare_regular"/>

    </LinearLayout>

</LinearLayout>