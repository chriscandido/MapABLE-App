<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context=".ui.home.ReportingActivity">

    <!-- Top Navigation Menu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <!-- Back button -->
        <TextView
            android:id="@+id/textView_report_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:text="Back"
            android:fontFamily="@font/poppins_light"
            android:clickable="true"
            style="@style/navigationText"/>

        <!-- Title page -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:text="Report Incident"
            style="@style/navigationText"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_mainmenu_report"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="Simulan ang Pagrereport"
                style="@style/headerText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="@string/report_desc"
                style="@style/contentText"/>
            
            <!-- Incident Type  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_outlinedbutton"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_report_incident"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Uri ng Insidente"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Ito ay mga karaniwang environmental incidents (algal bloom, fish kill, at iba pa) na nangyayari sa Manila bay at sa watershed nito."
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_light"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Location of Incident -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_outlinedbutton"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_report_location"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Lokasyon"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Nagtatala ng coordinates (latitude at longitude) ng mga insidente upang matrack at magkaroon ng ideya kung saan nangyari ang insidente"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_light"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Take Photo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_outlinedbutton"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="40dp"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_report_camera"
                    android:alpha="0.5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Larawan"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Kumukuha ng litrato o larawan ng insidente upang magkaroon ng ebidensiya ukol sa pangyayari"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins_light"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Take Survey Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_report_takeSurvey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/camera_mainTitle"
                    android:paddingBottom="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="Take Survey"
                    android:textColor="@color/colorBackground"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    app:cornerRadius="10dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <!-- Send Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_report_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/camera_mainTitle"
                    android:paddingBottom="10dp"
                    android:backgroundTint="@color/colorAccent"
                    android:text="Send"
                    android:textColor="@color/colorBackground"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    app:icon="@drawable/ic_report_send"
                    app:iconGravity="textStart"
                    app:iconTint="@color/colorBackground"
                    app:iconSize="25dp"
                    app:cornerRadius="10dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>