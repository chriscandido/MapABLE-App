<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".ui.home.MyReportActivity">

    <!-- Top Navigation Menu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText">

        <!-- Back button -->
        <ImageView
            android:id="@+id/imageView_unsentReport_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_arrow_back" />

    </RelativeLayout>

    <!-- Reports -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_myReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="75dp"
        android:scrollbars="vertical" />

    <!-- Send Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_myReport_save"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorText"
        android:text="IPASA"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_extrabold"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_report_send"
        app:iconGravity="textStart"
        app:iconSize="25dp"
        app:iconTint="@color/colorBlack"
        tools:targetApi="lollipop" />

</RelativeLayout>