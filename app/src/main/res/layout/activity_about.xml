<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorText"
    android:orientation="vertical"
    tools:context=".ui.home.AboutActivity">

    <!-- Navigation Menu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText">

        <!-- Back button -->
        <ImageView
            android:id="@+id/imageView_aboutUs_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_arrow_back" />

    </RelativeLayout>

    <!-- Kilalanin Natin si IM4ManilaBay -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Im4ManilaBay Panel -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/img_kilalanin_im4manilbayprogram"/>

            <!-- Im4Manila Bay fb link -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_about_im4manilabay"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_aboutUs_im4manilabay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Click here to visit Im4ManilaBay's Facebook Page"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:fontFamily="@font/montserrat"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- IWASTO Panel -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/img_kilalanin_iwasto"/>

            <!-- IWASTO fb link -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_about_iwasto"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_aboutUs_iwasto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Click here to visit IWASTO's Facebook Page"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:fontFamily="@font/montserrat"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- eSMART Panel -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/img_kilalanin_esmart"/>

            <!-- eSMART fb link -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_about_esmart"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_aboutUs_esmart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Click here to visit e-SMART's Facebook Page"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:fontFamily="@font/montserrat"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Charted Dream Panel -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/img_kilalanin_charteddream"/>

            <!-- MapABLE Panel -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/img_kilalanin_mapableproj"/>

            <!-- MapABLE fb link -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_about_mapable"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_aboutUs_mapable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Click here to visit Project MapABLE's Facebook Page"
                        android:textSize="10sp"
                        android:textColor="@color/colorBackground"
                        android:fontFamily="@font/montserrat"
                        tools:ignore="HardcodedText,SmallSp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>