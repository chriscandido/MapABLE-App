<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Navigation Menu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <!-- Back button -->
        <TextView
            android:id="@+id/textView_aboutUs_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:text="Back"
            android:fontFamily="@font/poppins_light"
            style="@style/navigationText"/>

        <!-- Title page -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:text="About Us"
            style="@style/navigationText"/>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="IM4ManilaBay Program"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                style="@style/headerText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Integrated Mapping, Monitoring, Modelling, and Management System for Manila Bay and Linked Environments"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/desc01_IM4ManilaBayProgram"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/desc02_IM4ManilaBayProgram"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/desc03_IM4ManilaBayProgram"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:id="@+id/textView_aboutUs_im4manilabayLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="https://www.facebook.com/IM4ManilaBay"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Project MapABLE"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textStart"
                style="@style/headerText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/title_MapABLE"
                android:textSize="15dp"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="@string/desc01_MapABLE"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_light"/>

            <TextView
                android:id="@+id/textView_aboutUs_mapableLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="https://www.facebook.com/ProjectMapABLE"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/poppins_semibold"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>