<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:spinnerItemStyle">@style/spinnerText</item>
    </style>

    <!-- Splash application theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- Header text theme -->
    <style name="headerText">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Content text theme -->
    <style name="contentText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorNeutral</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

    <!-- Navigation text theme -->
    <style name="navigationText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/comfortaa_bold</item>
    </style>

    <!-- Spinner text theme -->
    <style name="spinnerText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorNeutral</item>
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>

</resources>
